<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:background="@color/bgColor"
    android:theme="@style/Theme.AppCompat.Light.NoActionBar"
    tools:context=".Activities.CategoriaActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="Categorias"
        android:fontFamily="cursive"
        android:textAlignment="center"
        android:textSize="40dp"
        android:textStyle="bold" />
    <Spinner
        android:id="@+id/spinnerTipoMovimiento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown" />

    <EditText
        android:layout_marginBottom="15dp"
        android:id="@+id/txtDescripcion"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingLeft="20dp"
        android:hint="Cual es el Nombre de tu Categoria?"
        android:background="@drawable/config_edit"
        android:inputType="text" />



    <Button
        android:layout_marginTop="10dp"
        android:id="@+id/guardarTramite"
        android:layout_width="200dp"
        android:background="@drawable/config_button"
        android:textColor="#fff"
        android:layout_height="50dp"
        android:layout_below="@+id/editText"
        android:layout_centerHorizontal="true"
        android:onClick="accionNuevaCategoriaa"
        android:text="Registrar" />





</LinearLayout>